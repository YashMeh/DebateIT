<% include ../partials/header %>
<main>
<div class="row container">
<div style="margin-top:6em;margin-left:18em;">
    <div class="col s12 m6 container ">
      <div class="card teal lighten-2 z-depth-5 hoverable">
        <div class="card-content black-text">
          <span class="card-title center"><%= found_post.title %></span>
          <p><%= found_post.body %></p>
        </div>
        <div class="card-content black-text">
          
          <p class="yellow-text"><%= found_post.date.toString().substring(0,10) %></p>
        </div>
        <div class="card-content black-text">
          
          <p>
          <% found_post.comments.forEach(function(comment){ %>
          <hr class="style-one">
	      <strong class="yellow-text"><p><%= comment.author.username%></strong><br><%= comment.text%></p>
          <% }); %>
          </p>
          <hr class="style-one">
        </div>
        <div class="card-action">
          <a href="/posts/<%= found_post._id%>/comment/new" class="btn" style="display:inline">Comment</a>
          <a href="/posts" class="btn" style="display:inline">Back</a>
        </div>
      </div>
    </div>
  </div>
  </div>
  </main>

<% include ../partials/footer %>
